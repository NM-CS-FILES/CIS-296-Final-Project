<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="umd.cis296.ClientGUI"
      prefWidth="1280" prefHeight="720"
      spacing="10"
      stylesheets="@style.css">

    <StackPane prefWidth="640" prefHeight="720">
        <Text text="Chad Application"
              style="-fx-font-size: 36px; -fx-fill: #5865F2;" />
    </StackPane>

    <StackPane prefWidth="640" prefHeight="720" style="-fx-background-color: #a3a9f0;">
        <VBox spacing="20" alignment="TOP_CENTER">

            <Button fx:id="server1Button"
                    text="Server 1"
                    styleClass="server-button"
                    onAction="#switchToServer"
                    prefWidth="300" prefHeight="140"
                    alignment="CENTER_LEFT"
                    graphicTextGap="10">
                <graphic>
                    <ImageView fitWidth="128" fitHeight="128" preserveRatio="true">
                        <image>
                            <Image url="@Default_Profile_Picture.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="server2Button"
                    text="Server 2"
                    styleClass="server-button"
                    onAction="#switchToServer"
                    prefWidth="300" prefHeight="140"
                    alignment="CENTER_LEFT"
                    graphicTextGap="10">
                <graphic>
                    <ImageView fitWidth="128" fitHeight="128" preserveRatio="true">
                        <image>
                            <Image url="@Default_Profile_Picture.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

        </VBox>
    </StackPane>

</HBox>
