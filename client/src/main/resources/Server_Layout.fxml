<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="umd.cis296.ClientGUI"
            stylesheets="@style.css"
            prefWidth="1280"
            prefHeight="720">

    <left>
        <VBox prefWidth="200" spacing="10" style="-fx-background-color: lightgray; -fx-padding: 20;">
        <Button fx:id="server1Button"
                    text="Server 1"
                    styleClass="server-button"
                    onAction="#switchToServer"
                    prefWidth="150" prefHeight="42"
                    alignment="CENTER_LEFT"
                    graphicTextGap="10">
                <graphic>
                    <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                        <image>
                            <Image url="@Default_Profile_Picture.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="server2Button"
                    text="Server 2"
                    styleClass="server-button"
                    onAction="#switchToServer"
                    prefWidth="150" prefHeight="42"
                    alignment="CENTER_LEFT"
                    graphicTextGap="10">
                <graphic>
                    <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                        <image>
                            <Image url="@Default_Profile_Picture.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </left>

    <center>
        <VBox spacing="10">
            <VBox fx:id="textContainer" />
            <Region VBox.vgrow="ALWAYS" />
            <HBox spacing="10"
                  alignment="CENTER_LEFT"
                  prefHeight="80"
                  style="-fx-background-color: #e0e0e0; -fx-padding: 10 20 10 20; -fx-background-radius: 10 10 0 0;">
                <Button
                        text="+"
                        prefHeight="50"
                        prefWidth="50"
                        style="-fx-background-radius: 30; -fx-background-color: #4251f5; -fx-text-fill: white; -fx-font-size: 24px;" />
                <TextField fx:id="textField"
                           promptText="Enter text..."
                           prefWidth="980"
                           style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-border-color: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-font-size: 16px;" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
